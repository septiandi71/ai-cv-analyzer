# Application
NODE_ENV=development
PORT=3000
APP_NAME=AI CV Analyzer

# API Security (Required for production)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
API_KEY=your_secure_api_key_here

# Database (PostgreSQL) with Connection Pooling
DATABASE_URL="postgresql://username:password@pooler.domain.com:6543/dbname?pgbouncer=true"
DIRECT_URL="postgresql://username:password@direct.domain.com:5432/dbname"

# Redis (for Bull Queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# LLM Provider - Gemini Direct API
# Using 2 Gemini models for consistency (same tokenization, same API)
GEMINI_API_KEY=your_gemini_api_key_here

# Primary Model (Latest, most capable)
GEMINI_MODEL_PRIMARY=gemini-2.5-flash

# Backup Model (Stable fallback, still very capable)
GEMINI_MODEL_BACKUP=gemini-2.0-flash

# Ragie API (RAG as a Service)
RAGIE_API_KEY=your_ragie_api_key_here
RAGIE_BASE_URL=https://api.ragie.ai

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Job Queue
QUEUE_EVALUATION_CONCURRENCY=2
QUEUE_EVALUATION_ATTEMPTS=3
QUEUE_EVALUATION_BACKOFF_DELAY=5000
