# Application
NODE_ENV=development
PORT=3000
APP_NAME=AI CV Analyzer

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/ai_cv_analyzer?schema=public"

# Redis (for Bull Queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# LLM Configuration (Simplified 2-Provider Strategy)
# ============================================

# Global LLM Settings
LLM_TEMPERATURE=0.3

# 1. PRIMARY: Google Gemini (BEST FREE TIER - NO CREDIT CARD REQUIRED!)
# ✅ Free tier: 15 RPM, 1M TPM (tokens per minute)
# ✅ No payment method required
# ✅ High quality output
# ✅ 1M context window
# Get key: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL_FLASH=gemini-1.5-flash
GEMINI_MODEL_PRO=gemini-1.5-pro
USE_GEMINI_PRO=false  # Set true to use Pro for final synthesis (2 RPM limit)

# 2. BACKUP: OpenRouter Meta Llama (FREE & RELIABLE)
# ✅ Free tier: 20 RPM, 200K TPM
# ✅ Meta Llama 3.1 8B model
# ✅ Good quality, fast response
# Only used if Gemini fails or rate limited
# Get key: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=meta-llama/llama-3.1-8b-instruct:free
OPENROUTER_SITE_NAME=AI CV Analyzer
OPENROUTER_SITE_URL=http://localhost:3000

# Ragie API (RAG as a Service)
RAGIE_API_KEY=your_ragie_api_key_here
RAGIE_BASE_URL=https://api.ragie.ai

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Job Queue
QUEUE_EVALUATION_CONCURRENCY=2
QUEUE_EVALUATION_ATTEMPTS=3
QUEUE_EVALUATION_BACKOFF_DELAY=5000
